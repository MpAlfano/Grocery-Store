<!-- Search Bar -->
<div class="container mb-4">
    <div class="row height d-flex justify-content-center align-items-center">
        <div class="col-md-8">
            <div class="search"> <i class="fa fa-search"></i>
                <input type="search" placeholder="Want to search for a specific product?"
                    class="form-control searchbox-input" name="search" onkeyup="buttonUp();" required>
            </div>
        </div>
    </div>
</div>

<h1 class="text-center">{{category.name}}</h1>
<!-- Product cards -->
<div class="d-flex flex-wrap justify-content-center item-choice">

    {{#each category.products as |product|}}
    <div class="card mb-4 mx-3 shadow" style="width: 20rem;">
        <img src="/images/{{product.image}}" class="card-img-top" alt="{{this.name}}">
        <div class="card-body">
            <h5 class="card-title">{{this.name}}</h5>
            <p class="card-text">{{this.desc}}</p>
            <button class="btn btn-success" value="{{this.id}}">+</button>
            <input value="0" id="quantity-val{{this.id}}" data-id="{{this.id}}" type="number" pattern="/^-?\d+\.?\d*$/"
                onkeypress="if(this.value.length ===3) return false;" />
            <button class="btn btn-danger" data-id="{{this.id}}">-</button>
            <button name="{{this.id}}" class="btn color-green m-3">Add to List</button>
        </div>
    </div>
    {{/each}}

</div>