<div id="container" class="container columns full screen">
    <h2>{{catagory.name}}</h2>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        {{#each products as {{product}}
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <div class="card-title">
                        <h4><a href="product/{{this.id}}">{{this.name}}</a></h4>
                        <p class="card-text">
                            {{this.desc}}
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>